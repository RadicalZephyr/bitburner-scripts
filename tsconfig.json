{
    "include": [
        "NetscriptDefinitions.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js"
    ],
    "exclude": ["src/lib/react.ts", "src/jest-shim.ts", "src/**/*.test.ts"],
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "allowUmdGlobalAccess": true,
        "skipLibCheck": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "rootDir": "src/",
        "outDir": "dist/",
        "baseUrl": "src/",
        "allowJs": true,
        "types": ["jest"],
        "paths": {
            "/*": ["*"],
            "netscript": ["../NetScriptDefinitions.d.ts"]
        }
    }
}
