{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "typeRoots": ["./typings"],
    "allowJs": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noResolve": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
}
