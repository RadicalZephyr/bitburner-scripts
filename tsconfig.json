{
  "include": [
    "NetscriptDefinitions.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js"
  ],
  "exclude": ["src/lib/react.ts", "src/**/*.test.ts"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowJs": true,
    "jsx": "react",
    "types": [],
    "paths": {
      "/*": ["*"],
      "netscript": ["../NetScriptDefinitions.d.ts"],
      "@react": ["lib/react.ts"]
    }
  }
}
