{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node16",
    "outDir": "dist",
    "allowJs": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noResolve": true,
    "preserveConstEnums": true,
    "baseUrl": "types",
    "typeRoots": ["types"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
